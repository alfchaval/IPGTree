<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mtg.judge.ipgtree">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tree_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="mtg.judge.ipgtree.Activities.MainActivity"
            android:screenOrientation="nosensor"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="mtg.judge.ipgtree.Activities.OracleActivity"
            android:screenOrientation="nosensor"
            />
        <activity
            android:name="mtg.judge.ipgtree.Activities.DocumentActivity"
            android:screenOrientation="nosensor"
            />
        <activity
            android:name="mtg.judge.ipgtree.Activities.TreeActivity"
            />
        <activity
            android:name="mtg.judge.ipgtree.Activities.QuizActivity"
            />
        <activity
            android:name="mtg.judge.ipgtree.Activities.DecklistActivity"
            />
        <activity
            android:name="mtg.judge.ipgtree.Activities.DraftActivity"
            />
        <activity
            android:name="mtg.judge.ipgtree.Activities.TimerActivity"
            android:screenOrientation="nosensor"
            />
        <activity
            android:name="mtg.judge.ipgtree.Activities.Life2Activity"
            android:screenOrientation="nosensor"
            />
        <activity
            android:name="mtg.judge.ipgtree.Activities.Life4Activity"
            android:screenOrientation="landscape"
            />
        <activity
            android:name="mtg.judge.ipgtree.Activities.Life6Activity"
            android:screenOrientation="landscape"
            />
        <activity
            android:name="mtg.judge.ipgtree.Activities.SettingsActivity"
            android:screenOrientation="nosensor"
            />
        <activity
            android:name="mtg.judge.ipgtree.Activities.AdvancedSettingsActivity"
            android:screenOrientation="nosensor"
            />

        <receiver
            android:name=".Utilities.TimerReceiver"
            android:exported="true"
            />

    </application>

</manifest>