<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usuario.MagicQuiz">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/isperia"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.usuario.MagicQuiz.Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.DocumentsMenuActivity"
            />
        <activity
            android:name=".Activities.OracleActivity"
            />
        <activity
            android:name=".Activities.DocumentActivity"
            />
        <activity
            android:name=".Activities.TreeActivity"
            />
        <activity
            android:name=".Activities.QuizActivity"
            />
        <activity
            android:name=".Activities.DecklistActivity"
            />
        <activity
            android:name=".Activities.DraftActivity"
            />
        <activity
            android:name=".Activities.LifeActivity"
            android:screenOrientation="nosensor"
            />
        <activity
            android:name=".Activities.AboutActivity"
            />
    </application>

</manifest>