                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/txv_p1_d"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_p1_u_add"
                app:layout_constraintBottom_toTopOf="@+id/btn_p1_u_minus"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/btn_p1_ok"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_p1_m_minus"
                app:layout_constraintTop_toBottomOf="@+id/txv_p1_symbol"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="30dp"
                android:text="OK"
                />

            <Button
                android:id="@+id/btn_p1_m_minus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/txv_p1_symbol"
                app:layout_constraintEnd_toStartOf="@+id/btn_p1_c_minus"
                app:layout_constraintTop_toBottomOf="@+id/txv_p1_m"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/arrow_up"
                android:rotation="180"
                />

            <Button
                android:id="@+id/btn_p1_c_minus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/btn_p1_m_minus"
                app:layout_constraintEnd_toStartOf="@+id/btn_p1_d_minus"
                app:layout_constraintTop_toBottomOf="@+id/txv_p1_c"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/arrow_up"
                android:rotation="180"
                />

            <Button
                android:id="@+id/btn_p1_d_minus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/btn_p1_c_minus"
