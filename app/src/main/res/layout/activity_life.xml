                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/btn_p1_d_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txv_p1_u"
                android:background="@drawable/arrow_up"
                />

            <TextView
                android:id="@+id/txv_p1_symbol"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txv_p1_m"
                app:layout_constraintTop_toBottomOf="@+id/btn_p1_symbol"
                app:layout_constraintBottom_toTopOf="@+id/btn_p1_ok"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textSize="40dp"
                />

            <TextView
                android:id="@+id/txv_p1_m"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/txv_p1_symbol"
                app:layout_constraintEnd_toStartOf="@+id/txv_p1_c"
                app:layout_constraintTop_toBottomOf="@+id/btn_p1_m_add"
                app:layout_constraintBottom_toTopOf="@+id/btn_p1_m_minus"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textSize="40dp"
                />

            <TextView
                android:id="@+id/txv_p1_c"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/txv_p1_m"
                app:layout_constraintEnd_toStartOf="@+id/txv_p1_d"
                app:layout_constraintTop_toBottomOf="@+id/btn_p1_c_add"
                app:layout_constraintBottom_toTopOf="@+id/btn_p1_c_minus"
