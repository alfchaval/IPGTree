                />

            <TextView
                android:id="@+id/txv_p2_m"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/txv_p2_symbol"
                app:layout_constraintEnd_toStartOf="@+id/txv_p2_c"
                app:layout_constraintTop_toBottomOf="@+id/btn_p2_m_add"
                app:layout_constraintBottom_toTopOf="@+id/btn_p2_m_minus"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textSize="40dp"
                />

            <TextView
                android:id="@+id/txv_p2_c"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/txv_p2_m"
                app:layout_constraintEnd_toStartOf="@+id/txv_p2_d"
                app:layout_constraintTop_toBottomOf="@+id/btn_p2_c_add"
                app:layout_constraintBottom_toTopOf="@+id/btn_p2_c_minus"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textSize="40dp"
                />

            <TextView
                android:id="@+id/txv_p2_d"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/txv_p2_c"
                app:layout_constraintEnd_toStartOf="@+id/txv_p2_u"
                app:layout_constraintTop_toBottomOf="@+id/btn_p2_d_add"
                app:layout_constraintBottom_toTopOf="@+id/btn_p2_d_minus"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textSize="40dp"
                />

            <TextView
