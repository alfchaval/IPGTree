                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txv_p2_u"
                android:background="@drawable/arrow_up"
                />

            <TextView
                android:id="@+id/txv_p2_symbol"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txv_p2_m"
                app:layout_constraintTop_toBottomOf="@+id/btn_p2_symbol"
