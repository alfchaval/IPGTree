                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/btn_p1_symbol"
                app:layout_constraintEnd_toStartOf="@+id/btn_p1_c_add"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txv_p1_m"
                android:background="@drawable/arrow_up"
                />

            <Button
                android:id="@+id/btn_p1_c_add"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/btn_p1_m_add"
                app:layout_constraintEnd_toStartOf="@+id/btn_p1_d_add"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txv_p1_c"
                android:background="@drawable/arrow_up"
                />

            <Button
                android:id="@+id/btn_p1_d_add"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/btn_p1_c_add"
                app:layout_constraintEnd_toStartOf="@+id/btn_p1_u_add"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txv_p1_d"
                android:background="@drawable/arrow_up"
                />

            <Button
