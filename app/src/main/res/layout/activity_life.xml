        android:id="@+id/btn_p2plus1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@+id/btn_p2minus1"
        app:layout_constraintEnd_toStartOf="@+id/btn_p2plus10"
        app:layout_constraintTop_toBottomOf="@+id/frame_p2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30dp"
        android:text="+1"
