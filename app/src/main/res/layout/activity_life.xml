<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tree"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <Button
        android:id="@+id/btn_p1plus10"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_p1plus1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txv_p1life"
        android:textSize="30dp"
        android:text="+10"
        android:rotation="180"
        />

    <Button
        android:id="@+id/btn_p1plus1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@+id/btn_p1plus10"
        app:layout_constraintEnd_toStartOf="@+id/btn_p1minus1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txv_p1life"
        android:textSize="30dp"
        android:text="+1"
        android:rotation="180"
        />

    <Button
        android:id="@+id/btn_p1minus1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@+id/btn_p1plus1"
        app:layout_constraintEnd_toStartOf="@+id/btn_p1minus10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txv_p1life"
        android:textSize="30dp"
        android:text="-1"
        android:rotation="180"
        />

    <Button
        android:id="@+id/btn_p1minus10"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@+id/btn_p1minus1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txv_p1life"
        android:textSize="30dp"
        android:text="-10"
        android:rotation="180"
        />

    <TextView
        android:id="@+id/txv_p1life"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_p1plus10"
        app:layout_constraintBottom_toTopOf="@+id/btn_reset"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textSize="100dp"
        android:rotation="180"
        />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_p1life"
        app:layout_constraintBottom_toTopOf="@+id/txv_p2life"
        android:textSize="30dp"
        android:text="RESET"
        android:keepScreenOn="true"
        />

    <TextView
        android:id="@+id/txv_p2life"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset"
        app:layout_constraintBottom_toTopOf="@+id/btn_p2minus10"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textSize="100dp"
        android:text="lol"
        />

    <Button
        android:id="@+id/btn_p2minus10"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_p2minus1"
        app:layout_constraintTop_toBottomOf="@+id/txv_p2life"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30dp"
        android:text="-10"
        />

    <Button
        android:id="@+id/btn_p2minus1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@+id/btn_p2minus10"
        app:layout_constraintEnd_toStartOf="@+id/btn_p2plus1"
        app:layout_constraintTop_toBottomOf="@+id/txv_p2life"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30dp"
        android:text="-1"
        />

    <Button
        android:id="@+id/btn_p2plus1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@+id/btn_p2minus1"
        app:layout_constraintEnd_toStartOf="@+id/btn_p2plus10"
        app:layout_constraintTop_toBottomOf="@+id/txv_p2life"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30dp"
        android:text="+1"
        />

    <Button
        android:id="@+id/btn_p2plus10"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@+id/btn_p2plus1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_p2life"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30dp"
        android:text="+10"
        />

</android.support.constraint.ConstraintLayout>