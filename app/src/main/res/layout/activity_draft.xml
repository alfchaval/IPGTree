<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_draft"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/btn_mode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_select"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txv_status"
        android:background="@drawable/answer_background_parent"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btn_select"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn_mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txv_status"
        android:background="@drawable/answer_background_parent"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/txv_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mode"
        app:layout_constraintBottom_toTopOf="@+id/txv_time"
        android:padding="8dp"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/txv_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_status"
        app:layout_constraintBottom_toTopOf="@+id/btn_play"
        android:padding="8dp"
        android:textColor="@color/colorText"
        android:textSize="40dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_time"
        app:layout_constraintBottom_toTopOf="@+id/btn_reset"
        android:background="@drawable/answer_background_parent"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_play"
        app:layout_constraintBottom_toTopOf="@+id/btn_last"
        android:background="@drawable/answer_background_parent"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btn_last"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/answer_background_parent"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn_last"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/answer_background_parent"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>