                    <EditText
                        android:id="@+id/edt_aipg_es"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="AMTR_ES"
                        />

                    <EditText
                        android:id="@+id/edt_amtr_es"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="ADIPG_ES"
                        />

                    <EditText
                        android:id="@+id/edt_adipg_es"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="ADMTR_ES"
                        />

                    <EditText
                        android:id="@+id/edt_admtr_es"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow >

