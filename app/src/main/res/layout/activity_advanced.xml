                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="ADMTR_EN"
                        />

                    <EditText
                        android:id="@+id/edt_admtr_en"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="BANNED_EN"
                        />

                    <EditText
                        android:id="@+id/edt_banned_en"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="CR_EN"
                        />

                    <EditText
                        android:id="@+id/edt_cr_en"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="DQ_EN"
                        />

                    <EditText
                        android:id="@+id/edt_dq_en"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="TREE_EN"
                        />

                    <EditText
                        android:id="@+id/edt_tree_en"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow >

                    <TextView
                        android:text="JAR_EN"
                        />

                    <EditText
                        android:id="@+id/edt_jar_en"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow>

