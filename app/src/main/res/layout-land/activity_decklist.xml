<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_decklist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/answer_background_parent"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:text="Reiniciar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txv_total"
        />

    <TextView
        android:id="@+id/txv_total"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset"
        app:layout_constraintBottom_toTopOf="@+id/txv_number_list"
        />

    <TextView
        android:id="@+id/txv_number_list"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_3"
        app:layout_constraintTop_toBottomOf="@+id/txv_total"
        app:layout_constraintBottom_toTopOf="@+id/btn_undo"
        />

    <Button
        android:id="@+id/btn_undo"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/answer_background_parent"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:text="Deshacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_3"
        app:layout_constraintTop_toBottomOf="@+id/txv_number_list"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btn_add_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/answer_background_parent"
        android:textColor="@color/colorText"
        android:textSize="100dp"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/btn_reset"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_3"
        />

    <Button
        android:id="@+id/btn_add_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/answer_background_parent"
        android:textColor="@color/colorText"
        android:textSize="100dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/btn_add_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_4"
        />

    <Button
        android:id="@+id/btn_add_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/answer_background_parent"
        android:textColor="@color/colorText"
        android:textSize="100dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/btn_undo"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_1"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btn_add_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/answer_background_parent"
        android:textColor="@color/colorText"
        android:textSize="100dp"
        android:text="4"
        app:layout_constraintStart_toEndOf="@+id/btn_add_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_2"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>