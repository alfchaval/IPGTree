<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tree"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <Button
        android:id="@+id/btn_cr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_amtr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_jar"
        android:background="@drawable/answer_background_default"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:text="CR"
        />

    <Button
        android:id="@+id/btn_jar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_amtr"
        app:layout_constraintTop_toBottomOf="@+id/btn_cr"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/answer_background_default"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:text="JAR"
        />

    <Button
        android:id="@+id/btn_aipg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/btn_cr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_amtr"
        android:background="@drawable/answer_background_default"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:text="AIPG"
        />

    <Button
        android:id="@+id/btn_amtr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/btn_jar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_aipg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/answer_background_default"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:text="AMTR"
        />

</android.support.constraint.ConstraintLayout>